<div class="chartDisplay">
  <canvas id="myChart <%= session[:chart].to_s %>" ></canvas>
  <script>
    var ctx = document.getElementById("myChart <%= session[:chart].to_s %>");
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: <%= @numbers %>,
            datasets: [{
                label: '# of times this number has been in  a question',
                data: <%= @times %>,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(188, 213, 9, 0.2)',
                    'rgba(154, 0, 0, 0.2)',

                    'rgba(152, 175, 60, 0.2)',
                    'rgba(55, 158, 171, 0.2)'

                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(136, 166, 2, 0.2)',
                    'rgba(12, 31, 50, 0.2)',

                    'rgba(123, 150, 2, 0.2)',
                    'rgba(62, 112, 163, 0.2)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });
  </script>
</div>